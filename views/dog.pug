extends layout

block content
  h1= title
  //- - let items = ['dog_type','quantity','cost']
  - let items = results;
  - let o;
  script.
    function buy(x){
      alert('purchased item ' + x)
   } 
  div(class='container-fluid')
    a(class="btn btn-primary" href="/dog/create") Create
    div(class='row m-1')
    div(class="row row-cols-1 row-cols-sm-4 g-6")
      each item,index in items
        - let destination = `dispatch(\"/dog/update?id=${item._id}\")`
        - let details = `dispatch(\"/dog/detail?id=${item._id}\")` 
      
        div(class="dogd text-white bg-dark mb-3" class='col' class='dogd' class='dogd-body' class='dogd-text' onclick='buy('+index+')') Item #{item.dog_color}(#{item.dog_breed})is #{item.dog_price} 
          <br><br>
          span(class="btn btn-primary", onclick= details) Details
          <br>
          a(class="btn btn-secondary", href="/dog/delete/?id="+item._id) Delete
          <br>
          button.btn( class="btn-success ml-1", onclick= destination) Update

  script.
    function dispatch(path){
      window.location.href=path
    }